---
import { getCollection } from "astro:content";
import BaseLayout from "../layouts/BaseLayout.astro";
import { formatDate } from "../utils/formatDate";

export async function getStaticPaths() {
  const posts = await getCollection("posts");

  return posts.map((post) => {
    // Parse YYYY-MM-DD--slug format
    const dateMatch = post.id.match(/^([0-9]{4}-[0-9]{2}-[0-9]{2})--/);
    const date = dateMatch ? dateMatch[1] : post.data.date || "";

    const slug = post.id
      .replace(/^[0-9]{4}-[0-9]{2}-[0-9]{2}--/, "")
      .replace(/\/index\.(md|mdx)$/, "");

    return {
      params: { slug },
      props: { post, date },
    };
  });
}

const { post, date } = Astro.props;
const { Content, components } = await post.render();

// Import MDX components for custom elements like <re-img>
import MDXComponents from "../components/MDXComponents.jsx";
import TalkyardComments from "../components/TalkyardComments.astro";
---

<BaseLayout
  title={post.data.title}
  description={post.data.description}
  ogImage={post.data.cover}
  ogImageAlt={post.data.title}
>
  <article class="blog-post" data-pagefind-body>
    <header class="post-header">
      <h1 class="post-title" data-pagefind-meta="title">{post.data.title}</h1>
      <div class="post-meta">
        <time class="post-date">{formatDate(date)}</time>
        {
          post.data.author && (
            <span class="post-author">by {post.data.author}</span>
          )
        }
      </div>
      {
        post.data.tags && post.data.tags.length > 0 && (
          <div class="post-tags">
            {post.data.tags.map((tag) => (
              <a href={`/tags/${tag}/`} class="post-tag">
                #{tag}
              </a>
            ))}
          </div>
        )
      }
    </header>

    <div class="post-content">
      <Content components={MDXComponents} />
    </div>

    <TalkyardComments discussionId={post.data.discussionId} />
  </article>
</BaseLayout>

<style>
  .blog-post {
    max-width: var(--size-article-max-width);
    margin: 0 auto;
  }

  .post-header {
    margin-bottom: var(--space-l);
  }

  .post-title {
    font-size: var(--heading-size-h1);
    line-height: var(--heading-line-height-h1);
    margin-bottom: var(--space-s);
    color: var(--text-color-primary);
  }

  .post-meta {
    display: flex;
    gap: var(--space-m);
    align-items: center;
    margin-bottom: var(--space-m);
    font-size: var(--font-size-xs);
    color: var(--color-neutral-gray-g);
  }

  .post-date {
    font-weight: var(--font-weight-standard);
  }

  .post-author {
    font-style: italic;
  }

  .post-tags {
    display: flex;
    gap: var(--space-s);
    flex-wrap: wrap;
  }

  .post-tag {
    font-size: var(--font-size-xs);
    color: var(--color-brand-primary);
    padding: 4px 12px;
    background-color: var(--background-color-alt);
    border-radius: var(--size-radius-small);
    transition: background-color 0.2s ease;
  }

  .post-tag:hover {
    background-color: var(--color-brand-primary);
    color: var(--color-neutral-white);
  }

  .post-content {
    font-size: 1.1em;
    line-height: var(--text-line-height-default);
  }

  .post-content :global(h2) {
    font-size: var(--heading-size-h2);
    line-height: var(--heading-line-height-h2);
    margin-top: var(--space-l);
    margin-bottom: var(--space-m);
  }

  .post-content :global(h3) {
    font-size: var(--heading-size-h3);
    line-height: var(--heading-line-height-h3);
    margin-top: var(--space-l);
    margin-bottom: var(--space-m);
  }

  .post-content :global(p) {
    margin-bottom: var(--space-m);
  }

  .post-content :global(a) {
    color: var(--color-brand-primary);
    text-decoration: underline;
  }

  .post-content :global(a:hover) {
    color: var(--color-brand-hover);
  }

  .post-content :global(ul),
  .post-content :global(ol) {
    margin-bottom: var(--space-m);
    padding-left: var(--space-l);
  }

  .post-content :global(li) {
    margin-bottom: var(--space-s);
  }

  .post-content :global(blockquote) {
    margin: var(--space-l) 0;
    padding-left: var(--space-m);
    border-left: 4px solid var(--color-brand-primary);
    font-style: italic;
    color: var(--color-neutral-gray-h);
  }

  .post-content :global(code) {
    background-color: var(--background-color-alt);
    padding: 2px 6px;
    border-radius: 3px;
    font-size: 0.9em;
  }

  .post-content :global(pre) {
    margin: var(--space-m) 0;
    background-color: var(--background-color-alt);
    padding: var(--space-m);
    border-radius: var(--size-radius-default);
    overflow-x: auto;
  }

  .post-content :global(pre code) {
    background-color: transparent;
    padding: 0;
  }

  /* Image styles for Astro Image component */
  .post-content :global(img) {
    margin: 2.5em 0;
    width: 100%;
    max-width: 100%;
    height: auto;
    display: block;
    border-radius: 4px;
  }

  /* Width control classes */
  .post-content :global(.img-30) {
    max-width: 30%;
  }

  .post-content :global(.img-50) {
    max-width: 50%;
  }

  .post-content :global(.img-60) {
    max-width: 60%;
  }

  .post-content :global(.img-75) {
    max-width: 75%;
  }

  .post-content :global(.img-80) {
    max-width: 80%;
  }

  .post-content :global(.img-meme) {
    max-width: 30%;
  }
</style>
