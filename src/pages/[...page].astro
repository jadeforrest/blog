---
import type { GetStaticPaths, Page } from "astro";
import { getCollection } from "astro:content";
import BaseLayout from "../layouts/BaseLayout.astro";
import { FaCalendar, FaChevronLeft, FaChevronRight } from "react-icons/fa";
import { formatDate } from "../utils/formatDate";

export const getStaticPaths: GetStaticPaths = async ({ paginate }) => {
  // Get all posts and sort by date (newest first)
  const allPosts = await getCollection("posts");

  const posts = allPosts.map((post) => {
    // Parse YYYY-MM-DD--slug format
    const dateMatch = post.id.match(/^([0-9]{4}-[0-9]{2}-[0-9]{2})--/);
    const date = dateMatch ? dateMatch[1] : post.data.date || "";

    const slug = post.id
      .replace(/^[0-9]{4}-[0-9]{2}-[0-9]{2}--/, "")
      .replace(/\/index\.(md|mdx)$/, "");

    return {
      ...post,
      date,
      slug,
    };
  });

  const sortedPosts = posts.sort((a, b) => {
    // Sort by date descending (newest first)
    return b.date.localeCompare(a.date);
  });

  // Paginate posts - 20 per page
  return paginate(sortedPosts, { pageSize: 20 });
};

type Props = {
  page: Page;
};

const { page } = Astro.props;
const posts = page.data;
---

<BaseLayout
  title="Learn to build humane, effective engineering organizations"
  description="Engineering leadership blog by Jade Rubick"
>
  <div class="homepage">
    {
      page.currentPage === 1 && (
        <>
          <div class="newsletter-signup">
            <script src="https://f.convertkit.com/ckjs/ck.5.js" is:inline></script>
            <form
              action="https://app.convertkit.com/forms/2891253/subscriptions"
              class="convertkit-form"
              method="post"
              data-sv-form="2891253"
              data-uid="3978146adc"
            >
              <div class="form-content">
                <div class="form-column">
                  <h2>Engineering leadership weekly</h2>
                  <p class="form-subtitle">Learn to build humane, effective engineering organizations. Free, no bullshit, easy unsubscribes.</p>
                  <ul class="form-errors" data-element="errors"></ul>
                  <div class="form-fields">
                    <input
                      class="form-input"
                      name="email_address"
                      aria-label="Email Address"
                      placeholder="Email Address"
                      required
                      type="email"
                    />
                    <button type="submit" class="form-submit">
                      Sign me up!
                    </button>
                  </div>
                  <p class="form-disclaimer">
                    For engineering and product leaders. Also available as a{" "}
                    <a href="/newsletter">paid</a> newsletter.
                  </p>
                </div>
              </div>
            </form>
          </div>

          <div class="charity-container">
            <img
              src="/images/charity.png"
              alt="Charity"
              class="charity-image"
            />
          </div>
        </>
      )
    }

    <div class="recent-posts">
      <h2>Recent posts</h2>
      <div class="posts-container">
        {
          posts.map((post) => (
            <article class="post-item">
              {post.data.cover && (
                <a href={`/${post.slug}/`} class="post-image-link">
                  <picture>
                    <source
                      media="(max-width: 599px)"
                      srcset={`/${post.slug}/${post.data.cover.replace(/\.\w+$/, "")}-thumb-240.webp`}
                      type="image/webp"
                    />
                    <source
                      srcset={`/${post.slug}/${post.data.cover.replace(/\.\w+$/, "")}-thumb-400.webp`}
                      type="image/webp"
                    />
                    <img
                      src={`/${post.slug}/${post.data.cover}`}
                      alt={post.data.title}
                      width="200"
                      height="150"
                      loading="lazy"
                      class="post-image"
                    />
                  </picture>
                </a>
              )}
              <div class="post-content">
                <h3>
                  <a href={`/${post.slug}/`}>{post.data.title}</a>
                </h3>
                <div class="post-meta">
                  <span class="post-date">
                    <FaCalendar size={14} /> {formatDate(post.date)}
                  </span>
                </div>
                {post.data.tags && post.data.tags.length > 0 && (
                  <div class="post-tags">
                    {post.data.tags.map((tag) => (
                      <a href={`/tags/${tag}/`} class="tag-chip">
                        #{tag}
                      </a>
                    ))}
                  </div>
                )}
              </div>
            </article>
          ))
        }
      </div>

      <!-- Pagination controls -->
      <nav class="pagination" aria-label="Pagination">
        <div class="pagination-info">
          Page {page.currentPage} of {page.lastPage}
        </div>
        <div class="pagination-controls">
          {
            page.url.prev ? (
              <a href={page.url.prev} class="pagination-link prev" rel="prev">
                <FaChevronLeft size={14} />
                <span>Previous</span>
              </a>
            ) : (
              <span class="pagination-link prev disabled">
                <FaChevronLeft size={14} />
                <span>Previous</span>
              </span>
            )
          }

          {
            page.url.next ? (
              <a href={page.url.next} class="pagination-link next" rel="next">
                <span>Next</span>
                <FaChevronRight size={14} />
              </a>
            ) : (
              <span class="pagination-link next disabled">
                <span>Next</span>
                <FaChevronRight size={14} />
              </span>
            )
          }
        </div>
      </nav>
    </div>
  </div>
</BaseLayout>

<style>
  .homepage {
    max-width: 800px;
    margin: 0 auto;
  }

  /* Newsletter signup form */
  .newsletter-signup {
    margin: 0 0 var(--space-l) 0;
  }

  .convertkit-form {
    background-color: #f9fafb;
    border-radius: var(--size-radius-default);
    box-shadow: 0 0 2px rgba(0, 0, 0, 0.15);
    max-width: 100%;
    overflow: hidden;
  }

  .form-content {
    width: 100%;
  }

  .form-column {
    padding: var(--space-l);
  }

  .form-column h2 {
    color: #4d4d4d;
    font-size: 1.5rem;
    font-weight: 600;
    margin: 0 0 var(--space-xs) 0;
  }

  .form-subtitle {
    color: #595959;
    font-size: 0.95rem;
    line-height: 1.4;
    margin: 0 0 var(--space-m) 0;
  }

  .form-errors {
    background: #fde8e2;
    border: 1px solid #f2643b;
    border-radius: var(--size-radius-small);
    color: #ea4110;
    list-style: none;
    margin: 0 0 var(--space-m) 0;
    padding: var(--space-s);
    display: none;
  }

  .form-errors:not(:empty) {
    display: block;
  }

  .form-fields {
    margin-bottom: var(--space-m);
  }

  .form-input {
    width: 100%;
    background: #ffffff;
    font-size: 15px;
    padding: 12px;
    border: 1px solid #e3e3e3;
    border-radius: var(--size-radius-small);
    margin-bottom: var(--space-s);
    transition: border-color 0.3s ease;
  }

  .form-input:focus {
    outline: none;
    border-color: var(--color-brand-primary);
  }

  .form-input::placeholder {
    color: #8b8b8b;
    opacity: 0.5;
  }

  .form-submit {
    width: 100%;
    border: 0;
    border-radius: var(--size-radius-small);
    color: #ffffff;
    background-color: var(--color-brand-primary);
    cursor: pointer;
    font-size: 15px;
    font-weight: 500;
    padding: 12px 24px;
    transition: background-color 0.3s ease;
  }

  .form-submit:hover {
    background-color: var(--color-brand-hover);
  }

  .form-disclaimer {
    color: #595959;
    font-size: 13px;
    margin: 0;
  }

  .form-disclaimer a {
    color: var(--color-brand-primary);
    text-decoration: none;
  }

  .form-disclaimer a:hover {
    text-decoration: underline;
  }

  .charity-container {
    margin: var(--space-l) 0;
  }

  .charity-image {
    width: 100%;
    height: auto;
    display: block;
  }

  .recent-posts {
    margin: var(--space-default) 0;
  }

  .recent-posts h2 {
    font-size: var(--heading-size-h2);
    line-height: var(--heading-line-height-h2);
    font-weight: var(--font-weight-bold);
    margin: var(--space-m) 0;
    text-align: center;
    color: var(--color-neutral-gray-j);
  }

  .posts-container {
    display: flex;
    flex-direction: column;
    gap: var(--space-s);
    max-width: 100%;
  }

  .post-item {
    display: flex;
    border-radius: var(--size-radius-default);
    overflow: hidden;
    background: var(--color-neutral-white);
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
    transition: all var(--time-duration-default);
    margin-bottom: var(--space-s);
  }

  .post-item:hover {
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.15);
  }

  .post-image-link {
    flex-shrink: 0;
    width: 200px;
    height: 150px;
    overflow: hidden;
  }

  .post-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .post-item:hover .post-image {
    transform: scale(1.05);
  }

  .post-content {
    flex: 1;
    padding: var(--space-m);
    overflow: hidden;
    display: flex;
    flex-direction: column;
  }

  .post-content h3 {
    font-size: var(--heading-size-h3);
    line-height: var(--heading-line-height-h3);
    margin: 0 0 var(--space-xs) 0;
  }

  .post-content h3 a {
    color: var(--text-color-primary);
    text-decoration: none;
  }

  .post-content h3 a:hover {
    color: var(--color-brand-primary);
  }

  .post-meta {
    font-size: var(--font-size-xs);
    color: var(--color-neutral-gray-j);
    margin-top: auto;
  }

  .post-date {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
  }

  .post-date :global(svg) {
    color: var(--color-brand-primary);
  }

  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xs);
    margin-top: var(--space-s);
  }

  .tag-chip {
    display: inline-block;
    padding: var(--space-xs) var(--space-s);
    font-size: var(--font-size-xs);
    color: var(--color-brand-primary);
    background-color: var(--background-color-alt);
    border-radius: var(--size-radius-small);
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .tag-chip:hover {
    background-color: var(--color-brand-primary);
    color: var(--color-neutral-white);
  }

  /* Pagination styles */
  .pagination {
    margin-top: var(--space-l);
    padding-top: var(--space-l);
    border-top: 1px solid var(--color-neutral-gray-c);
    display: flex;
    flex-direction: column;
    gap: var(--space-m);
    align-items: center;
  }

  .pagination-info {
    font-size: var(--font-size-s);
    color: var(--color-neutral-gray-h);
  }

  .pagination-controls {
    display: flex;
    gap: var(--space-m);
  }

  .pagination-link {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    padding: var(--space-s) var(--space-m);
    border-radius: var(--size-radius-small);
    font-size: var(--font-size-s);
    text-decoration: none;
    color: var(--color-brand-primary);
    background-color: var(--background-color-alt);
    transition: all 0.2s ease;
  }

  .pagination-link:not(.disabled):hover {
    background-color: var(--color-brand-primary);
    color: var(--color-neutral-white);
  }

  .pagination-link.disabled {
    opacity: 0.5;
    cursor: not-allowed;
    color: var(--color-neutral-gray-g);
  }

  .pagination-link :global(svg) {
    flex-shrink: 0;
  }

  @media (max-width: 599px) {
    .post-image-link {
      width: 120px;
      height: 90px;
    }
  }

  @media (min-width: 600px) {
    .posts-container {
      margin-top: var(--space-l);
    }

    .post-item {
      margin-bottom: var(--space-m);
    }

    .pagination {
      flex-direction: row;
      justify-content: space-between;
    }
  }
</style>
