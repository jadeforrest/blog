---
import type { GetStaticPaths, Page } from "astro";
import { getCollection } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";
import { FaCalendar, FaChevronLeft, FaChevronRight } from "react-icons/fa";
import { formatDate } from "../../utils/formatDate";

export const getStaticPaths: GetStaticPaths = async ({ paginate }) => {
  // Get all posts and sort by date (newest first)
  const allPosts = await getCollection("posts");

  const posts = allPosts
    .map((post) => {
      // Parse YYYY-MM-DD--slug format
      const dateMatch = post.id.match(/^([0-9]{4}-[0-9]{2}-[0-9]{2})--/);
      const date = dateMatch ? dateMatch[1] : post.data.date || "";

      const slug = post.id
        .replace(/^[0-9]{4}-[0-9]{2}-[0-9]{2}--/, "")
        .replace(/\/index\.(md|mdx)$/, "");

      return {
        ...post,
        date,
        slug,
      };
    })
    .sort((a, b) => {
      // Sort by date descending (newest first)
      return b.date.localeCompare(a.date);
    });

  // Paginate posts - 20 per page
  return paginate(posts, { pageSize: 20 });
};

type Props = {
  page: Page;
};

const { page } = Astro.props;
const posts = page.data;
---

<BaseLayout
  title="Blog Posts"
  description="Engineering leadership blog by Jade Rubick"
>
  <div class="posts-page">
    <header class="posts-header">
      <h1>Blog Posts</h1>
    </header>

    <div class="posts-list">
      <div class="posts-container">
        {
          posts.map((post) => (
            <article class="post-item">
              {post.data.cover && (
                <a href={`/${post.slug}/`} class="post-image-link">
                  <img
                    src={`/${post.slug}/${post.data.cover}`}
                    alt={post.data.title}
                    class="post-image"
                  />
                </a>
              )}
              <div class="post-content">
                <h3>
                  <a href={`/${post.slug}/`}>{post.data.title}</a>
                </h3>
                <div class="post-meta">
                  <span class="post-date">
                    <FaCalendar size={14} /> {formatDate(post.date)}
                  </span>
                </div>
                {post.data.tags && post.data.tags.length > 0 && (
                  <div class="post-tags">
                    {post.data.tags.map((tag) => (
                      <a href={`/tags/${tag}/`} class="tag-chip">
                        #{tag}
                      </a>
                    ))}
                  </div>
                )}
              </div>
            </article>
          ))
        }
      </div>

      <!-- Pagination controls -->
      <nav class="pagination" aria-label="Pagination">
        <div class="pagination-info">
          Page {page.currentPage} of {page.lastPage}
        </div>
        <div class="pagination-controls">
          {
            page.url.prev ? (
              <a href={page.url.prev} class="pagination-link prev" rel="prev">
                <FaChevronLeft size={14} />
                <span>Previous</span>
              </a>
            ) : (
              <span class="pagination-link prev disabled">
                <FaChevronLeft size={14} />
                <span>Previous</span>
              </span>
            )
          }

          {
            page.url.next ? (
              <a href={page.url.next} class="pagination-link next" rel="next">
                <span>Next</span>
                <FaChevronRight size={14} />
              </a>
            ) : (
              <span class="pagination-link next disabled">
                <span>Next</span>
                <FaChevronRight size={14} />
              </span>
            )
          }
        </div>
      </nav>
    </div>
  </div>
</BaseLayout>

<style>
  .posts-page {
    max-width: 800px;
    margin: 0 auto;
  }

  .posts-header {
    margin-bottom: var(--space-l);
    text-align: center;
  }

  .posts-header h1 {
    font-size: var(--heading-size-h1);
    line-height: var(--heading-line-height-h1);
    color: var(--text-color-primary);
    margin-bottom: var(--space-m);
  }

  .posts-list {
    margin: var(--space-default) 0;
  }

  .posts-container {
    display: flex;
    flex-direction: column;
    gap: var(--space-s);
    max-width: 100%;
  }

  .post-item {
    display: flex;
    border-radius: var(--size-radius-default);
    overflow: hidden;
    background: var(--color-neutral-white);
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
    transition: all var(--time-duration-default);
    margin-bottom: var(--space-s);
  }

  .post-item:hover {
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.15);
  }

  .post-image-link {
    flex-shrink: 0;
    width: 200px;
    height: 150px;
    overflow: hidden;
  }

  .post-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .post-item:hover .post-image {
    transform: scale(1.05);
  }

  .post-content {
    flex: 1;
    padding: var(--space-m);
    overflow: hidden;
    display: flex;
    flex-direction: column;
  }

  .post-content h3 {
    font-size: var(--heading-size-h3);
    line-height: var(--heading-line-height-h3);
    margin: 0 0 var(--space-xs) 0;
  }

  .post-content h3 a {
    color: var(--text-color-primary);
    text-decoration: none;
  }

  .post-content h3 a:hover {
    color: var(--color-brand-primary);
  }

  .post-meta {
    font-size: var(--font-size-xs);
    color: var(--color-neutral-gray-j);
    margin-top: auto;
  }

  .post-date {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
  }

  .post-date :global(svg) {
    color: var(--color-brand-primary);
  }

  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xs);
    margin-top: var(--space-s);
  }

  .tag-chip {
    display: inline-block;
    padding: var(--space-xs) var(--space-s);
    font-size: var(--font-size-xs);
    color: var(--color-brand-primary);
    background-color: var(--background-color-alt);
    border-radius: var(--size-radius-small);
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .tag-chip:hover {
    background-color: var(--color-brand-primary);
    color: var(--color-neutral-white);
  }

  /* Pagination styles */
  .pagination {
    margin-top: var(--space-l);
    padding-top: var(--space-l);
    border-top: 1px solid var(--color-neutral-gray-c);
    display: flex;
    flex-direction: column;
    gap: var(--space-m);
    align-items: center;
  }

  .pagination-info {
    font-size: var(--font-size-s);
    color: var(--color-neutral-gray-h);
  }

  .pagination-controls {
    display: flex;
    gap: var(--space-m);
  }

  .pagination-link {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    padding: var(--space-s) var(--space-m);
    border-radius: var(--size-radius-small);
    font-size: var(--font-size-s);
    text-decoration: none;
    color: var(--color-brand-primary);
    background-color: var(--background-color-alt);
    transition: all 0.2s ease;
  }

  .pagination-link:not(.disabled):hover {
    background-color: var(--color-brand-primary);
    color: var(--color-neutral-white);
  }

  .pagination-link.disabled {
    opacity: 0.5;
    cursor: not-allowed;
    color: var(--color-neutral-gray-g);
  }

  .pagination-link :global(svg) {
    flex-shrink: 0;
  }

  @media (max-width: 599px) {
    .post-image-link {
      width: 120px;
      height: 90px;
    }
  }

  @media (min-width: 600px) {
    .posts-container {
      margin-top: var(--space-l);
    }

    .post-item {
      margin-bottom: var(--space-m);
    }

    .pagination {
      flex-direction: row;
      justify-content: space-between;
    }
  }
</style>
