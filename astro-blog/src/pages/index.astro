---
import { getCollection } from "astro:content";
import BaseLayout from "../layouts/BaseLayout.astro";
import { FaCalendar } from "react-icons/fa";

// Get all posts and sort by date (newest first)
const allPosts = await getCollection("posts");

const posts = allPosts
  .map((post) => {
    // Parse YYYY-MM-DD--slug format
    const dateMatch = post.id.match(/^([0-9]{4}-[0-9]{2}-[0-9]{2})--/);
    const date = dateMatch ? dateMatch[1] : post.data.date || "";

    const slug = post.id
      .replace(/^[0-9]{4}-[0-9]{2}-[0-9]{2}--/, "")
      .replace(/\/index\.(md|mdx)$/, "");

    return {
      ...post,
      date,
      slug,
    };
  })
  .sort((a, b) => {
    // Sort by date descending (newest first)
    return b.date.localeCompare(a.date);
  });
---

<BaseLayout
  title="Learn to build humane, effective engineering organizations"
  description="Engineering leadership blog by Jade Rubick"
>
  <div class="homepage">
    <header class="homepage-header">
      <h1>Learn to build humane, effective engineering organizations</h1>
    </header>

    <div class="recent-posts">
      <h2>Recent posts</h2>
      <div class="posts-container">
        {
          posts.map((post) => (
            <article class="post-item">
              <div class="post-content">
                <h3>
                  <a href={`/${post.slug}/`}>{post.data.title}</a>
                </h3>
                <div class="post-meta">
                  <span class="post-date">
                    <FaCalendar size={14} /> {post.date}
                  </span>
                </div>
              </div>
            </article>
          ))
        }
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .homepage {
    max-width: 800px;
    margin: 0 auto;
  }

  .homepage-header {
    margin-bottom: var(--space-l);
    text-align: center;
  }

  .homepage-header h1 {
    font-size: var(--heading-size-h1);
    line-height: var(--heading-line-height-h1);
    color: var(--text-color-primary);
    margin-bottom: var(--space-m);
  }

  .recent-posts {
    margin: var(--space-default) 0;
  }

  .recent-posts h2 {
    font-size: var(--heading-size-h2);
    line-height: var(--heading-line-height-h2);
    font-weight: var(--font-weight-bold);
    margin: var(--space-m) 0;
    text-align: center;
    color: var(--color-neutral-gray-j);
  }

  .posts-container {
    display: flex;
    flex-direction: column;
    gap: var(--space-s);
    max-width: 100%;
  }

  .post-item {
    display: flex;
    border-radius: var(--size-radius-default);
    overflow: hidden;
    background: var(--color-neutral-white);
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
    transition: all var(--time-duration-default);
    margin-bottom: var(--space-s);
  }

  .post-item:hover {
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.15);
  }

  .post-content {
    flex: 1;
    padding: var(--space-m);
    overflow: hidden;
    display: flex;
    flex-direction: column;
  }

  .post-content h3 {
    font-size: var(--heading-size-h3);
    line-height: var(--heading-line-height-h3);
    margin: 0 0 var(--space-xs) 0;
  }

  .post-content h3 a {
    color: var(--text-color-primary);
    text-decoration: none;
  }

  .post-content h3 a:hover {
    color: var(--color-brand-primary);
  }

  .post-meta {
    font-size: var(--font-size-xs);
    color: var(--color-neutral-gray-j);
    margin-top: auto;
  }

  .post-date {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
  }

  .post-date :global(svg) {
    color: var(--color-brand-primary);
  }

  @media (min-width: 600px) {
    .posts-container {
      margin-top: var(--space-l);
    }

    .post-item {
      margin-bottom: var(--space-m);
    }
  }
</style>
